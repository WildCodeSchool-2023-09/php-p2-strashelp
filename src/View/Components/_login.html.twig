<section class="login-section">
	<div id="modal-center-1" class="uk-flex-top" uk-modal>
		<div class="uk-modal-dialog container uk-modal-body uk-margin-auto-vertical login">
			<button class="uk-modal-close-default" type="button" uk-close></button>
			<h2>Connexion</h2>
			<p>Connectez-vous avec votre identifiant ou adresse mail
			</p>
			<form action="" method="post" id="login-form" class="form-input">
