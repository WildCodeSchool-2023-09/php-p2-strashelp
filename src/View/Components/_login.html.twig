<section class="login-section">
    <div id="modal-center-1" class="uk-flex-top" uk-modal>
        <div class="uk-modal-dialog container  uk-modal-body uk-margin-auto-vertical">
            <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="login">
        <h2>Connexion</h2>
            <p>Connectez-vous avec votre identifiant ou adresse mail
            </p>
                <form action="" method="post">
                <input type="text" placeholder="Identifiant" name="identifiant">
                    <div>{{ errors.identifiant }}</div>
                <br>
                <input type= "password" placeholder="Mot de passe" name="password">
                    {{ errors.password }}
                <br>
                <div class="form-button">
                <input type="submit" name="loginButton" value="Se connecter" class="button-1">
                </div>
                </form>
                <div class="forgottenPassword">
                    <p><a>Mot de passe oublié ?</a></p>
                <p>Si vous ne possédez pas encore de compte, <a>inscrivez-vous</a> en quelques clics</p>
            </div>
    </div>
</section>